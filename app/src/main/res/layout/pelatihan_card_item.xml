<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_item_pelatihan"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="30dp"
    android:background="@drawable/bg_corner_shadowbox">

   <androidx.appcompat.widget.LinearLayoutCompat
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="16dp"
       android:layout_marginStart="16dp">
       <ImageView
           android:id="@+id/card_img_pelatihan"
           android:layout_width="150dp"
           android:layout_height="100dp"
           android:background="@drawable/corner_radius_bg"
           android:src="@drawable/example"
           />
       <TextView
           android:id="@+id/tv_pelatihan_title"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="8dp"
           android:text="@string/P3k"
           android:textColor="@color/black"
           android:textSize="12sp"
           android:textStyle="bold"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Online"
           android:layout_marginTop="16dp"
           android:textSize="16sp"/>
   </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:id="@+id/status_pelatihan"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Online"
        android:textSize="16sp"
        android:background="@drawable/bg_status_online"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginStart="170dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jadwal Pertemuan"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:layout_marginStart="25dp"
        android:layout_marginTop="125dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calendar"/>
        <TextView
            android:id="@+id/date_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 November 2023"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:src="@drawable/ic_line"/>

        <TextView
            android:id="@+id/date_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp"
            android:text="23 November 2023 07.00 wib"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_detail_pelatihan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="16dp"
        android:text="Detail Pelatihan"/>

</androidx.cardview.widget.CardView>